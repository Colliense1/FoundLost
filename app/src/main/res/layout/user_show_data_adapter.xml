<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250.0dip"
        android:layout_marginTop="5dp"
        android:background="#fffefefe"
        card_view:cardCornerRadius="6.0dip"
        card_view:cardElevation="12.0dip"
        card_view:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="dd/mm/yyyy"
                android:textColor="#FCFCFC"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="35dp"
            android:background="#fff"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical"
                android:padding="10dp">


                <TextView
                    android:id="@+id/DepartmentNameTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Colliense Podder"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/LostAddressTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="CSE Building, Dhaka"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView_Id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="PhoneID"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/textView_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Email"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/textView_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Description"
                    android:textColor="#000" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp">


                <TextView
                    android:id="@+id/textView_phone"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="165dp"
                    android:background="@color/colorPrimary"
                    android:drawableLeft="@drawable/ic_phone_white_24dp"
                    android:gravity="center"
                    android:paddingLeft="25dp" />

                <!--
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/textView_cross"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_below="@+id/textView_phone"
                    android:drawableLeft="@drawable/ic_close_white_24dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:paddingLeft="25dp"/>
                 !-->

            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="3.0dip"
        android:layout_marginTop="8.0dip"
        android:background="@color/colorPrimary" />

</LinearLayout>